import http from 'http'
import app from '../../app'

const port = parseInt(process.env.PORT, 10) || 8000;
app.set('port', port);

const server = http.createServer(app);
if(!module.parent) {
	server.listen(port, () => {
		console.log(`The server is running at localhost:${port}`);
	});
}

module.exports = server;